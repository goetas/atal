<?xml version="1.0" encoding="UTF-8"?>
<project name="tests" default="test" basedir="../../">
    <property file="build/build.properties" />

    <target name="test">
        <phingcall target="lint" />
        <phingcall target="unit-all" />
    </target>

    <target name="test-lite">
        <phingcall target="unit" />
    </target>

    <target name="unit">
        <mkdir dir="${path.results}/logs" />
        <exec
            passthru="true"
            checkreturn="true"
            command='phpunit --log-junit "${path.logs}/junit.xml"
                       --configuration "${path.tests}/phpunit.xml"'
        />
    </target>

    <target name="unit-all">
        <delete dir="${path.results}/coverage" />
        <mkdir dir="${path.results}/coverage" />
        <mkdir dir="${path.results}/logs" />
        <exec
            passthru="true"
            checkreturn="true"
            command='phpunit --log-junit "${path.logs}/junit.xml"
                       --coverage-clover "${path.logs}/clover.xml"
                       --coverage-html "${path.results}/coverage"
                       --configuration "${path.tests}/phpunit.xml"'
        />
    </target>

    <target name="lint">
        <phplint haltonfailure="true" deprecatedAsError="true">
            <fileset dir="${path.lib}">
                <include name="**/*.php" />
            </fileset>
        </phplint>
    </target>

</project>